<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterActivity">

    <ImageView
        android:id="@+id/character_activity_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/character_activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_image"/>

    <TextView
        android:id="@+id/character_activity_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_name"/>

    <TextView
        android:id="@+id/character_activity_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_nick_name"/>

    <TextView
        android:id="@+id/character_activity_interpreted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_house"/>

    <TextView
        android:id="@+id/character_activity_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_interpreted"/>

    <TextView
        android:id="@+id/character_activity_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ron Weasley"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/character_activity_children"/>

</androidx.constraintlayout.widget.ConstraintLayout>